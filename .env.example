# Backend Environment Variables Template

# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/teachflow
# For production, use MongoDB Atlas or hosted instance:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/teachflow?retryWrites=true&w=majority

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://your-frontend-domain.com
# For development: http://localhost:5173

# YouTube API Configuration
YT_CLIENT_ID=your-youtube-client-id
YT_CLIENT_SECRET=your-youtube-client-secret
YT_REFRESH_TOKEN=your-youtube-refresh-token

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@teachflow.com

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Rate Limiting (optional override)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
